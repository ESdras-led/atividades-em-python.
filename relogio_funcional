import datetime
import time

def relogio_funcional():
  while True:
    hora_atual =  datetime.datetime.now().strftime("%H:%M:%S:%f") #para so mostrar a hora,min e seg.
    print(f"A hora atual Ã©:{hora_atual}", end="\r"  )
    time.sleep(1)
relogio_funcional()
